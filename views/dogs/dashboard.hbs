<div class="col-sm-10 col-lg-12 col-xl-18 col-center">

    {{#each dogs}}
    <div class="row">
        <container class="index">

            <img src={{image}}>


            <div class="data" class="index">
                <a href="/dashboard/{{_id}}" class="attributes">
                    <h4 class="dog-name" id="dog-name">{{name}}</h4> </a>
                <h5><span class = "bold">breed:</span> {{breed}}</h5>
                <h5><span class = "bold">color:</span> {{color}}</h5>
                <h5><span class = "bold">size:</span> {{size}}</h5>
                <h5><span class = "bold">location:</span> {{location}}</h5>
                <h5><span class = "bold">reward:</span> {{reward}}</h5>
                <h5><span class = "bold">phoneNumber:</span> {{phoneNumber}}</h5>
                <h5><span class = "bold">description:</span> {{description}}</h5>
                <h5><span class = "bold">lost:</span> {{lost}}</h5>
            </div>

        </container>
    </div>
    {{/each}}
</div>